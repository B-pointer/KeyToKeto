<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane style="-fx-background-color: #17376b;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox alignment="CENTER" prefHeight="450.0" prefWidth="750.0" spacing="75.0">
         <children>
            <VBox alignment="CENTER" prefHeight="295.0" prefWidth="275.0" spacing="15.0">
               <children>
      
                         <TextField fx:id="usernameField" prefHeight="45.0" prefWidth="275.0" promptText="Username">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
      		<TextField fx:id="emailField" prefHeight="45.0" prefWidth="200" promptText="Email ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
            		<ComboBox fx:id="genderBox" prefHeight="45.0" prefWidth="275.0">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </ComboBox>
              <DatePicker fx:id="birthDatePicker" prefHeight="45.0" prefWidth="275.0" promptText="Date of Birth" />
            		<Button fx:id="backButton" mnemonicParsing="false" onAction="#backClick" prefHeight="40.0" prefWidth="125.0" style="-fx-background-color: #022d72; -fx-border-color: #ffffff; -fx-border-width: 3; -fx-border-radius: 5; -fx-font-family: arial;" text="Back" textFill="WHITE">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="295.0" prefWidth="275.0" spacing="15.0">
               <children>
      		<TextField fx:id="passwordField" prefHeight="45.0" prefWidth="200" promptText="Password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
      		<TextField fx:id="passwordConfirmField" prefHeight="45.0" prefWidth="200" promptText="Confirm Password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
            		<TextField fx:id="heightField" prefHeight="45.0" prefWidth="200" promptText="Height in inches">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </TextField>
            		<TextField fx:id="weightField" prefHeight="45.0" prefWidth="200" promptText="Weight in Pounds">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
            
                        <Button fx:id="create" mnemonicParsing="false" onAction="#createClick" prefHeight="40.0" prefWidth="125.0" style="-fx-background-color: #022d72; -fx-border-color: #ffffff; -fx-border-width: 3; -fx-border-radius: 5; -fx-font-family: arial;" text="Create Account" textFill="#fffefe">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
